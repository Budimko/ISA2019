
@{
    ViewData["Title"] = "BrzaRezervacija";
}

<h2>Brza Rezervacija</h2>

<div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

    <!-- AVIOKOMPANJIJA PRETRAGA -->

    <BR>



    <form >
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="let-start">Polazak</label>
                <input type="text" class="form-control" name="Polazak" placeholder="">
            </div>
            <div class="form-group col-md-2">
                <label for="let-end">Broj sedista</label>
                <input type="text" class="form-control" name="BrojSedista">
            </div>

            <div class="form-group col-md-2">
                <label for="let-od">Od</label>
                <input type="text" class="form-control" name="From">
            </div>

            <div class="form-group col-md-2">
                <label for="let-do">Do</label>
                <input type="text" class="form-control" name="To">
            </div>
            <div class="form-group col-md-1">
                <label for="let-od">Nova cena</label>
                <input type="text" class="form-control" name="NovaCena">
            </div>
            <div class="form-group col-md-1">
                <label for="let-od">Stara cena</label>
                <input type="text" class="form-control" name="StaraCena">
            </div>
            <div class="form-group col-md-2">
                <label for="let-od">Vreme trajanja leta</label>
                <input type="text" class="form-control" name="Vreme">
            </div>



        </div>


        <button type="submit" value="Flight" class="btn btn-primary">Rezerviši</button>
    </form>


</div>
