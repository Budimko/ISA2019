@model EasyFlight.Models.Airline;

@{
    ViewData["Title"] = "ProfilEdit";
}

<p>Informacije Aviokompanije</p>
<form method="post">
<div class="form-group">
    <label for="name">Naziv</label>
    <input type="text" class="form-control" name="Name" value="@Html.DisplayFor(modelItem => Model.Name)">

</div>
<div class="form-group">
    <label for="opis">Opis</label>
    <input type="text" class="form-control" name="Description" value="@Html.DisplayFor(modelItem => Model.Description)">

</div>
<div class="form-group">
    <label for="adresa">Adresa</label>
    <input type="text" class="form-control" name="Address" value="@Html.DisplayFor(modelItem => Model.Address)">

</div>
<button type="submit" class="btn btn-primary" value="Update">Update</button>
</form>
