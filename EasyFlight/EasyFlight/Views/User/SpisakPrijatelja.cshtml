
@model IEnumerable<EasyFlight.ViewModel.FriendViewModel>

<ul class="nav nav-pills nav-fill">
    <li class="nav-item">
        <a class="nav-link" href="https://localhost:44300/User/Index">Informacije</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="https://localhost:44300/User/SpisakPrijatelja">Prijatelji</a>


        <BR><BR>
        @if (Model.Count() == 0)
        {
            <BR><BR><BR>
            <a>Trenutno nemate ni jednog prijatelja. Mozete na linku ispod dodati prijatelje u listu</a>
        }
        else
        {
            <BR><BR>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FIrstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FIrstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            <BR><BR><BR>
                    <div>
                        @Html.ActionLink("Dodaj prijatelja", "DodajPrijatelja", "User")
                    </div>
        }
    </li>
    

</ul>