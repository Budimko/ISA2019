<BR><BR><BR>
        <div class="row justify-content-md-center">

            <div class="col-8 offset-2">



                <form action="/User/Edit">

                    <div class="form-group">
                        <label for="login-password">Name</label>
                        <input type="text" class="form-control" name="Name" value="@Html.DisplayFor(modelItem => Model.Name)" readonly="@(true)">

                    </div>
                    <div class="form-group">
                        <label for="surname">Surname</label>
                        <input type="text" class="form-control" name="Surname" value="@Html.DisplayFor(modelItem => Model.Surname)" readonly="@(true)">
                    </div>
                    <div class="form-group">
                        <label for="login-email">Email address</label>
                        <input type="email" class="form-control" name="Email" value="@Html.DisplayFor(modelItem => Model.Email)" readonly="@(true)">
                    </div>
                    <div class="form-group">
                        <label for="login-password">Password</label>
                        <input type="password" class="form-control" name="Password" value="@Html.DisplayFor(modelItem => Model.Password)" readonly="@(true)">
                    </div>

                    <div class="form-group">
                        <label for="adress">Adress</label>
                        <input type="text" class="form-control" name="Address" value="@Html.DisplayFor(modelItem => Model.Address)" readonly="@(true)">
                    </div>
                    <div class="form-group">
                        <label for="PhoneNumber">PhoneNumber</label>
                        <input type="text" class="form-control" name="PhoneNumber" value="@Html.DisplayFor(modelItem => Model.PhoneNumber)" readonly="@(true)">
                    </div>
                    <div>
                        <input type="hidden" id="Id" name="Id" value=@Html.DisplayFor(modelItem => Model.Id)>
                    </div>


                    <button type="submit" class="btn btn-primary" value="Update">Update</button>

                </form>

                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">
                window.onload = function () {

                    /**/
                    alert("@ViewBag.Message");
                    /**/

                };
                    </script>
                }

            </div>
            
            

        </div>